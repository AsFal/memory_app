<% include ../partials/user_header %>

<h1>Categories Menu</h1>

<div class="ui three cards">
  <% category_list.forEach(function(category){%>
    <div class="card">
        <div class="image">
          <img src="<%=category.image%>" alt="">
          <!-- <img src="<%=category.image%>" style="width:100%; height:100%;"> -->
        </div>
        <div class="content">
          <a class="header" href="/categories/<%=category._id%>">
            <%=category.title%>
          </a>
          <div class="meta">
            <!--  Add part of the description here, needs script to limit and add ...>

            </address>-->
          </div>
        </div>
        <div class="exta content">
          <div class="ui three buttons">
            <div class="ui button">
              <form class="" action="/categories/<%=category._id%>?_method=DELETE" method="post">
                <button type="submit" >Delete</button>
              </form>
            </div>
            <div class="ui button"><a href="/categories/<%=category._id%>/edit">Edit</a></div>
            <div class="ui button"><a href="/categories/<%=category._id%>/play">Play</a></div>
          </div>
        </div>
    </div>
  <%});%>

  <div class="card">
      <a class="link slot"href="/categories/new">Create Category!</a>
  </div>
</div>


