<% include partials/header %>

<h1>Categories Menu</h1>
<div class="container">
  <div class="row">
    <% category_list.forEach(function(category){%>
      <div class="col-md-3 col-sm-6">
          <h4><%=category.title%></h4>
          <a href="/categories/<%=category._id%>">
            <img src="<%=category.image%>" style="width:100%; height:100%;">
          </a>
          <p>Number of cards: <%=category.nb_cards%></p>
          <a href="/categories/<%=category._id%>/edit">Edit</a>
          <a href="/categories/<%=category._id%>/play">Play!</a>
          <form class="" action="/categories/<%=category._id%>?_method=DELETE" method="post">
            <button type="submit" >Delete</button>
          </form>
      </div>
    <%});%>
    <div class="col-md-3 col-sm-6">
      <a href="/categories/new">Create Category!</a>
    </div>
  </div>
</div>


<% include partials/footer %>
